-#  This file is app/views/movies/index.html.haml
%h1 Movies with same director as #{@movie.title}


%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Director 
      %th Release Date
      %th More Info
  %tbody
    - @same_directors.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.director
        %td= movie.release_date

